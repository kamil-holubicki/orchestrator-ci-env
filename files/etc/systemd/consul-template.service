[Unit]
Description=consul-template
Requires=network-online.target
After=network-online.target consul.service

[Service]
Type=simple
User=consul
Group=consul
EnvironmentFile=-/etc/sysconfig/consul-template
Restart=on-failure
ExecStart=/usr/bin/consul-template -config=/etc/consul-template.d -template "/tmp/haproxy.ctmpl:/tmp/haproxy.conf"
KillSignal=SIGINT
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
